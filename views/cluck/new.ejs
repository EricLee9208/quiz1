<%- include('../partials/header.ejs') %>
<div style="width: 99vw; height: 50vh; margin: 10px">
  <form
    style="border: solid black 1px; padding: 40px"
    action="/cluck/new"
    method="POST"
  >
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea
        name="content"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
        placeholder="Whatchoo cluckin' 'bout"
      ></textarea>
    </div>

    <div class="mb-3">
      <label for="url" class="form-label">Image Url</label>
      <input
        type="text"
        name="imageUrl"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="https://exampleURL.com"
      />
    </div>
    <input type="submit" class="btn btn-primary" value="Cluck!" />
  </form>
</div>
<%- include('../partials/footer.ejs') %>
